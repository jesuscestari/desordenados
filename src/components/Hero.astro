---
import Titulo from '../assets/Titulo.png';
import Frame from '../assets/Frame.png';
---

<section class="hero min-h-screen flex items-center justify-center relative overflow-hidden px-4 py-12">

	<!-- Animated background effects -->
	<div class="absolute inset-0 overflow-hidden pointer-events-none">
		<div class="glow-orb glow-orb-1"></div>
		<div class="glow-orb glow-orb-2"></div>
		<div class="glow-orb glow-orb-3"></div>
	</div>

	<!-- Content container -->
	<div class="content-wrapper relative z-10 flex flex-col items-center justify-center gap-8 md:gap-12 max-w-5xl mx-auto">
		<!-- Logo Title with animation -->
		<div class="title-container animate-fade-in-down">
			<img
				src={Titulo.src}
				alt="Desordenados Electro-Movilidad"
				class="w-full max-w-2xl md:max-w-3xl lg:max-w-4xl h-auto drop-shadow-2xl hover:scale-105 transition-transform duration-500 ease-out no-drag"
				draggable="false"
				oncontextmenu="return false;"
			/>
		</div>

		<!-- Helmet Frame with glow effect -->
		<div class="frame-container animate-fade-in-up relative group">
			<div class="absolute inset-0 bg-gradient-to-r from-orange-500 via-yellow-400 to-red-500 opacity-0 group-hover:opacity-50 blur-3xl transition-opacity duration-700"></div>
			<img
				src={Frame.src}
				alt="Desordenados Helmet"
				class="relative w-full max-w-md md:max-w-lg lg:max-w-xl h-auto drop-shadow-[0_0_50px_rgba(255,165,0,0.3)] hover:drop-shadow-[0_0_80px_rgba(255,165,0,0.6)] transition-all duration-700 hover:scale-110 no-drag"
				draggable="false"
				oncontextmenu="return false;"
			/>
		</div>

		<!-- Optional tagline - uncomment if needed -->
		<!-- <div class="tagline animate-fade-in text-center mt-8">
			<p class="text-gray-300 text-lg md:text-xl lg:text-2xl font-light tracking-wide">
				La revolución eléctrica sobre dos ruedas
			</p>
		</div> -->
	</div>
</section>

<style>
	.hero {
		position: relative;
	}

	/* Animated glowing orbs in background */
	.glow-orb {
		position: absolute;
		border-radius: 50%;
		filter: blur(80px);
		opacity: 0.15;
		animation: float 20s ease-in-out infinite;
	}

	.glow-orb-1 {
		width: 400px;
		height: 400px;
		background: linear-gradient(135deg, #5dd9e8, #00d4ff);
		top: 10%;
		left: -10%;
		animation-delay: 0s;
	}

	.glow-orb-2 {
		width: 500px;
		height: 500px;
		background: linear-gradient(135deg, #ff6b35, #ff4757);
		bottom: 10%;
		right: -10%;
		animation-delay: 5s;
	}

	.glow-orb-3 {
		width: 350px;
		height: 350px;
		background: linear-gradient(135deg, #ffd93d, #ff6348);
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		animation-delay: 10s;
	}

	@keyframes float {
		0%, 100% {
			transform: translate(0, 0) scale(1);
		}
		33% {
			transform: translate(30px, -30px) scale(1.1);
		}
		66% {
			transform: translate(-30px, 30px) scale(0.9);
		}
	}

	/* Fade in animations */
	.animate-fade-in-down {
		animation: fadeInDown 1s ease-out;
	}

	.animate-fade-in-up {
		animation: fadeInUp 1.2s ease-out;
		animation-delay: 0.3s;
		animation-fill-mode: both;
	}

	.animate-fade-in {
		animation: fadeIn 1.5s ease-out;
		animation-delay: 0.8s;
		animation-fill-mode: both;
	}

	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-50px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(50px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.glow-orb {
			filter: blur(60px);
		}

		.glow-orb-1,
		.glow-orb-2,
		.glow-orb-3 {
			width: 250px;
			height: 250px;
		}
	}

	/* Prevent image dragging and selection */
	.no-drag {
		user-select: none;
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
		-webkit-user-drag: none;
		-khtml-user-drag: none;
		-moz-user-drag: none;
		-o-user-drag: none;
		pointer-events: auto;
	}
</style>
