---
import Titulo from '../assets/Titulo.png';
import Frame from '../assets/Frame.png';
---

<section id="hero" class="hero min-h-screen flex items-center justify-center relative overflow-hidden px-4 py-12">

	<!-- Content container -->
	<div class="content-wrapper relative z-10 flex flex-col items-center justify-center gap-8 md:gap-12 max-w-5xl mx-auto">
		<!-- Logo Title with animation -->
		<div class="title-container animate-fade-in-down">
			<img
				src={Titulo.src}
				alt="Desordenados Electro-Movilidad"
				class="hero-image w-full max-w-2xl md:max-w-3xl lg:max-w-4xl h-auto drop-shadow-2xl hover:scale-105 transition-transform duration-500 ease-out no-drag"
				draggable="false"
				oncontextmenu="return false;"
			/>
		</div>

		<!-- Helmet Frame with glow effect -->
		<div class="frame-container animate-fade-in-up relative group">
			<div class="absolute inset-0 bg-gradient-to-r from-orange-500 via-yellow-400 to-red-500 opacity-0 group-hover:opacity-50 blur-3xl transition-opacity duration-700"></div>
			<img
				src={Frame.src}
				alt="Desordenados Helmet"
				class="hero-image floating-frame relative w-full max-w-md md:max-w-lg lg:max-w-xl h-auto drop-shadow-[0_0_50px_rgba(255,165,0,0.3)] hover:drop-shadow-[0_0_80px_rgba(255,165,0,0.6)] transition-all duration-700 hover:scale-110 no-drag"
				draggable="false"
				oncontextmenu="return false;"
			/>
		</div>

		<!-- Optional tagline - uncomment if needed -->
		<!-- <div class="tagline animate-fade-in text-center mt-8">
			<p class="text-gray-300 text-lg md:text-xl lg:text-2xl font-light tracking-wide">
				La revolución eléctrica sobre dos ruedas
			</p>
		</div> -->
	</div>
</section>

<style>
	.hero {
		position: relative;
	}

	/* Fade in animations */
	.animate-fade-in-down {
		animation: fadeInDown 1s ease-out;
	}

	.animate-fade-in-up {
		animation: fadeInUp 1.2s ease-out;
		animation-delay: 0.3s;
		animation-fill-mode: both;
	}

	.animate-fade-in {
		animation: fadeIn 1.5s ease-out;
		animation-delay: 0.8s;
		animation-fill-mode: both;
	}

	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-50px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(50px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	/* Prevent image dragging and selection */
	.no-drag {
		user-select: none;
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
		-webkit-user-drag: none;
		-khtml-user-drag: none;
		-moz-user-drag: none;
		-o-user-drag: none;
		pointer-events: auto;
	}

	/* Increase color saturation for hero images */
	.hero-image {
		filter: saturate(1.4);
	}

	/* Floating animation for Frame image */
	.floating-frame {
		animation: floatFrame 6s ease-in-out infinite;
	}

	@keyframes floatFrame {
		0%, 100% {
			transform: translateY(0px) rotate(0deg);
		}
		25% {
			transform: translateY(-20px) rotate(1deg);
		}
		50% {
			transform: translateY(-10px) rotate(0deg);
		}
		75% {
			transform: translateY(-25px) rotate(-1deg);
		}
	}
</style>
